<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\AutoDto\AutoDto.csproj" />
    </ItemGroup>

    <Target Name="Generate DTOs" AfterTargets="PostBuildEvent">
        <Exec Command="dotnet my-dtoGenerator -a $(OutDir)$(TargetName).dll --dto $(ProjectDir)../DTOs/Dto -n DTOs.Dto --convertorOutputPath $(ProjectDir)../Convertors/Convertor --convertorNamespace Convertors.Convertor" ContinueOnError="false" />
    </Target>
</Project>
